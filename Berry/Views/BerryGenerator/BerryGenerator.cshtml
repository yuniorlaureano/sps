    <script src="@Url.Content("~/js/Utils.js")"></script>
    <script src="@Url.Content("~/js/berryGenerator.js")"></script><!--"~/js/berryGenerator.js"-->

    <script>
        $('#weekRange').daterangepicker({
            "showDropdowns": true,
            "timePickerIncrement": 1,
            "autoApply": true,
            "startDate": Date.now,
            "endDate": Date.now,
            "opens": "left",
            "drops": "down",
            "buttonClasses": "btn btn-sm",
            "applyClass": "btn-success",
            "cancelClass": "btn-default"
        });
    </script>
}

