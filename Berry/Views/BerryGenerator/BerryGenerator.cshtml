@section styles {    
    <link href="@Url.Content("~/plugins/bootstrap-datepicker/bootstrap-datepicker.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/datepicker/daterangepicker.css")" rel="stylesheet" />

    <style type="text/css">
        .demo {
            position: relative;
        }

            .demo i {
                position: absolute;
                bottom: 10px;
                right: 24px;
                top: auto;
                cursor: pointer;
            }
    </style>
}
<section class="featured">

    <div class="boxed">

        <!--CONTENT CONTAINER-->
        <!--===================================================-->
        <div id="content-container">

            <div id="page-content">
                
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">Formulario de semanas</h3>
                            </div>
                            <!--Block Styled Form -->
                            <!--===================================================-->
                            <form data-url="@Url.Action("GetWeekByDb", "BerryGenerator")" id="form-berry-generator">
                                <div class="panel-body">
                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="control-label">Semanas</label>
                                                    <select class="selectpicker form-control" id="canvweek" data-show-subtext="true" data-url="@Url.Action("GetActiveDateByCanvWeek", "BerryGenerator")"></select>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="control-label" for="weekly-fecha-desde">Fecha desde</label>
                                                    <input type="text" class="form-control date" id="weekly-fecha-desde">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="control-label" for="weekly-fecha-hasta">Fecha hasta</label>
                                                    <input type="text" class="form-control date" id="weekly-fecha-hasta">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer text-right">
                                    <button class="btn btn-primary" type="button" data-url="@Url.Action("GenerateBerry", "BerryGenerator")" id="command-button-proccess">Generar</button>
                                </div>
                            </form>
                            <!--===================================================-->
                            <!--End Block Styled Form -->
                        </div>
                    </div>
                </div>
